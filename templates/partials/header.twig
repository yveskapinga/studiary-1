<header class="py-4 border-b border-gray-300">
    <div class="container flex justify-between text-sm">
        <div class="flex items-center">
            {% if not app.user %}
                <h1 class="text-base font-semibold tracking-tight">
                    <a href="{{ path('index') }}">Studiary</a>
                </h1>
            {% else %}
                {% set user = app.user %}
                <div class="font-semibold">
                    {{ user.firstName }} {{ user.lastName }}
                </div>
                {% if 'ROLE_STUDENT' in user.roles %}
                    <div class="ml-2">
                        |<span class="ml-2">{{ user.grade }}</span>
                    </div>
                {% endif %}
            {% endif %}
        </div>

        <div>
            {% if app.user %}
                <a class="text-gray-700" href="{{ path('logout') }}">Logout</a>
            {% else %}
                <a class="block btn btn-black" href="{{ path('login') }}">Login</a>
            {% endif %}
        </div>
    </div>
</header>
